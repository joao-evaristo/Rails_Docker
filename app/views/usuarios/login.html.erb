<%= content_for :title, "WeGoGym | Login" %>
<%= stylesheet_link_tag "login" %>

<div class="container-fluid" id="container">

  <div id="loginForm">
    <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
      <li class="nav-item" role="presentation">
        <a id="fundoLogin" class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login"
          role="tab" aria-controls="pills-login" aria-selected="true">Login</a>
      </li>

      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login"></div>
      <div class="text-center mb-3">
        <p style="font-family: google-regular;">Entre com:</p>
        <button type="button" class="btn btn-link btn-floating mx-1">
          <%= image_tag "facebook.png" , id:"iconFace"%>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
          <%= image_tag "google.png" , id:"iconGoogle"%>
        </button>
        <p class="text-center" style="font-family: google-regular;">ou:</p>
        <% flash.each do |type, msg| %>
          <div class="alert alert-danger">
            <%= msg %>
          </div>
        <% end %>
        <%= form_with model: @usuario, url: entrar_path do |form|%>
          <div class="form-outline mb-4">
            <%= form.label :email, class:  "form-label", style:"font-family: google-regular;"%>
            <%= form.text_field :email, class: "form-control",  placeholder: "seuemail@gmail.com", id: "loginName"%>
          </div>

          <div class="form-outline mb-4">
            <%= form.label :senha, class:  "form-label", style:"font-family: google-regular;", id: "loginPassword"%>
            <%= form.password_field :password, class: "form-control"%>
          </div>


          <%= form.submit "Entrar", id:"reg-bt", class:"btn btn-block mb-4" %>
          <div class="row mb-4">
            <div class="col-md-6 d-flex justify-content-center">
              <div class="form-check mb-3 mb-md-0">
                <input class="form-check-input" type="checkbox" value="" id="loginCheck"
                       checked />
                <label class="form-check-label" for="loginCheck" style="font-family: google-regular;"> Lembrar de mim </label>
              </div>
            </div>

            <div class="col-md-6 d-flex justify-content-center">
              <a class="laranja" href="#!" style="font-family: google-regular;">Esqueceu a senha?</a>
            </div>
          </div>
        <% end %>

        <div class="text-center">
          <p>Sem conta? <%= link_to 'Registrar-se' , cadastro_path, class:'laranja', style: 'font-family: google-regular;' %></p>
        </div>
      </div>
    </div>
  </div>
</div>